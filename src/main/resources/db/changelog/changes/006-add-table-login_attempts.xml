<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="create-login-attempts-table" author="your-name">
        <createSequence
                sequenceName="login_attempts_seq"
                startValue="1"
                incrementBy="50"/>
        <createTable tableName="login_attempts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="attempts" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="locked_until" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="last_attempt" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_login_attempts_email" tableName="login_attempts">
            <column name="email"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>